<?xml version="1.0"?>

<!-- F4 animation by Ron Jensen -->

<PropertyList>

 <path>F4E.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>tailhook</object-name>
  <property>/controls/gear/tailhook</property>
<!--  <property>/gear/tailhook/position-norm</property> -->
  <factor>55</factor>
  <offset-deg>0</offset-deg>
  <center>
   <x-m>5.5672778</x-m>
   <y-m>0</y-m>
   <z-m>-0.73386240</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
  </animation>
  <animation>
  <type>rotate</type>
  <object-name>ng</object-name>
  <property>gear/gear[0]/position-norm</property>
  <factor>90</factor>
  <offset-deg>-90</offset-deg>
  <center>
   <x-m>-5.6157222</x-m>
   <y-m>0</y-m>
   <z-m>-0.65586240</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>ng_lower</object-name>
    <condition>
      <greater-than>
        <property>gear/gear[0]/position-norm</property>
        <value>0.9</value>
      </greater-than>
    </condition>
    <property>fdm/jsbsim/fcs/steer-pos-deg</property>
<!--
  <property>gear/gear[0]/steering-norm</property>
  <factor>-45</factor>
-->
  <center>
   <x-m>-5.6157222</x-m>
   <y-m>0</y-m>
   <z-m>-0.73886240</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>-1</z>
  </axis>
 </animation>
<animation>
  <type>translate</type>
  <object-name>ng_lower</object-name>
  <property>gear/gear/compression-norm</property>
  <factor>0.5</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
  <animation>
  <type>rotate</type>
  <object-name>mgL</object-name>
  <property>gear/gear[1]/position-norm</property>
  <factor>-92</factor>
  <offset-deg>92</offset-deg>
  <center>
   <x-m>1.8422778</x-m>
   <y-m>-2.810</y-m>
   <z-m>-0.74286240</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 <animation>
  <type>translate</type>
  <object-name>mgL_lower</object-name>
  <property>gear/gear[1]/compression-norm</property>
  <factor>0.75</factor>
  <axis>
   <x>0.105</x>
   <y>0</y>
   <z>0.995</z>
  </axis>
 </animation>

  <animation>
  <type>rotate</type>
  <object-name>mgR</object-name>
  <property>gear/gear[2]/position-norm</property>
  <factor>92</factor>
  <offset-deg>-92</offset-deg>
  <center>
   <x-m>1.8422778</x-m>
   <y-m>2.810</y-m>
   <z-m>-0.74286240</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 <animation>
  <type>translate</type>
  <object-name>mgR_lower</object-name>
  <property>gear/gear[2]/compression-norm</property>
  <factor>0.65</factor>
  <axis>
   <x>0.105</x>
   <y>0</y>
   <z>0.995</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>stabalator</object-name>
  <property>fdm/jsbsim/fcs/elevator-pos-rad</property>
  <factor>57.29578</factor> 
  <center>
   <x-m>8.0892778</x-m>
   <y-m>0.0</y-m>
   <z-m>0.47713760</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>rudder</object-name>
  <property>/fdm/jsbsim/fcs/rudder-pos-rad</property>
  <factor>-57.29578</factor>
  <center>
   <x-m>8.0012778</x-m>
   <y-m>0</y-m>
   <z-m>1.67613760</z-m>
  </center>
  <axis>
   <x>0.290</x>
   <y>0</y>
